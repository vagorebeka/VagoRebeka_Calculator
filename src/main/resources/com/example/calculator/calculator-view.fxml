<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10.0" prefHeight="90.0" prefWidth="148.0" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator.CalculatorController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
   
      <Label fx:id="eredmenyLabel" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
      <HBox spacing="5.0" GridPane.columnSpan="2" GridPane.rowIndex="1">
         <children>
            <Button fx:id="pluszButton" onAction="#pluszButtonClick" text="+" />
            <Button fx:id="minuszButton" onAction="#minuszButtonClick" text="-" />
            <Button fx:id="szorzasButton" onAction="#szorzasButtonClick" text="*" />
            <Button fx:id="osztasButton" onAction="#osztasButtonClick" text="/" />
            <Button fx:id="szazalekButton" onAction="#szazalekButtonClick" text="\%" />
         </children>
      </HBox>
      <TextField fx:id="szam1Field" />
      <TextField fx:id="szam2Field" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</GridPane>
